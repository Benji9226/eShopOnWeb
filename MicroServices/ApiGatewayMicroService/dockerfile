# Use Go image
FROM golang:1.21-alpine AS builder

WORKDIR /app

# Copy the source code
COPY ApiGateway.go .

# Build the binary
RUN go build -o api-gateway ApiGateway.go

# Minimal runtime image
FROM alpine:latest

WORKDIR /app

COPY --from=builder /app/api-gateway .

EXPOSE 8080

CMD ["./api-gateway"]
